<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">



	<bean id='standardWorkflow'
		class='com.demo.CustomWorkflow.StandardWorkflow'>
		<property name='workflowActions'>
			<map>
				<entry key='action1_action'>
					<ref bean='action1_action' />
				</entry>
			</map>
		</property>
	</bean>



	<bean id='action1_action' class='java.util.ArrayList'>
		<constructor-arg>
			<list value-type='com.javatpoint.WorkflowAction'>
				<ref bean='calculateMarks' />
				<ref bean='checkForExtraCurricular' />
				<ref bean='publishFinalScore' />
			</list>
		</constructor-arg>
	</bean>



	<bean id="calculateMarks" class="com.demo.CustomWorkflow.actions.CalculateMarks"></bean>
	<bean id="checkForExtraCurricular" class="com.demo.CustomWorkflow.actions.CheckForExtraCurricular"></bean>
	<bean id="publishFinalScore" class="com.demo.CustomWorkflow.actions.PublishFinalScore"></bean>




	<bean id="student" class="com.demo.CustomWorkflow.Student">
		<property name="id" value="100"></property>
		<property name="name" value="Makesh"></property>
		<property name="marks">
			<map>
				<entry key="English">
					<value>200</value>
				</entry>

				<entry key="Maths">
					<value>300</value>
				</entry>
			</map>
		</property>
	</bean>
</beans>  



